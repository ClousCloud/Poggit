extends parent

mixin RulesSection(rule, root)
	div(class= root ? "RulesDoc" : (rule.paragraphs.length > 0 ? "RulesSection" : ""))
		if rule.title.constructor.name === "Escaped"
			p!= rule.title
		else
			p= rule.title
		each paragraph in rule.paragraphs
			if typeof paragraph === "string"
				p= paragraph
			else if paragraph.constructor === "Escaped"
				p!= paragraph.value
			else
				+RulesSection(paragraph)

block body
	+RulesSection(rules, true)
